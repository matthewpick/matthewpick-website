---
import GenerativeHero from './GenerativeHero.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  heroImage?: string;
  slug: string;
}

const { title, description, pubDate, heroImage, slug } = Astro.props;
const formattedDate = pubDate.toLocaleDateString('en-US', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<article class="group bg-card rounded-xl overflow-hidden border border-border hover:border-accent/30 transition-all duration-300 hover:shadow-lg hover:shadow-accent/5">
  <a href={`/${slug}`} class="flex flex-col sm:flex-row">
    <div class="sm:w-32 md:w-40 flex-shrink-0 aspect-square overflow-hidden">
      {heroImage ? (
        <img
          src={heroImage}
          alt=""
          class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
        />
      ) : (
        <div class="w-full h-full group-hover:scale-105 transition-transform duration-300">
          <GenerativeHero slug={slug} />
        </div>
      )}
    </div>
    <div class="p-4 flex flex-col justify-center">
      <time datetime={pubDate.toISOString()} class="text-sm text-accent font-medium">
        {formattedDate}
      </time>
      <h2 class="text-xl font-semibold text-primary group-hover:text-accent transition-colors mt-1 mb-2">
        {title}
      </h2>
      <p class="text-secondary line-clamp-2">
        {description}
      </p>
    </div>
  </a>
</article>
