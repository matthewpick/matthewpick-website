---
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<section class="py-16 md:py-24">
  <div class="max-w-4xl mx-auto px-4">
    <h1 class="text-4xl md:text-5xl font-bold text-charcoal dark:text-off-white mb-4">
      {SITE_TITLE}
    </h1>
    <p class="text-lg md:text-xl text-charcoal/70 dark:text-off-white/70 max-w-2xl">
      {SITE_DESCRIPTION}
    </p>
  </div>
</section>
