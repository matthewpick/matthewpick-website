---
import BaseLayout from '../layouts/BaseLayout.astro';
import HeroHeader from '../components/HeroHeader.astro';
import PostCard from '../components/PostCard.astro';
import { getCollection } from 'astro:content';
import { SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<BaseLayout title={SITE_TITLE}>
  <HeroHeader />

  <section class="pb-16">
    <div class="max-w-4xl mx-auto px-4">
      <h2 class="text-2xl font-bold text-charcoal dark:text-off-white mb-8">
        Latest Posts
      </h2>

      {posts.length > 0 ? (
        <div class="grid gap-8 md:grid-cols-2">
          {posts.map((post) => (
            <PostCard
              title={post.data.title}
              description={post.data.description}
              pubDate={post.data.pubDate}
              heroImage={post.data.heroImage}
              slug={post.data.slug || post.slug}
            />
          ))}
        </div>
      ) : (
        <p class="text-charcoal/60 dark:text-off-white/60">No posts yet.</p>
      )}
    </div>
  </section>
</BaseLayout>
